		<loader></loader>
		<header>
			<span class="mobile-open">menu</span>
			<logo>
				<a href="/"><img src="images/logo.svg" alt="_PROJECT_NAME_" /></a>
			</logo>
			<nav>
				<a href="/about">About</a>
				{% if userAccount %}
				<a href="/account">Hello {{ userAccount.username }}!</a>
				<a href="/logout">Logout</a>
				{% else %}
				<a href="/signup">Sign Up</a>
				<a href="/login">Login</a>
				{% endif %}
			</nav>
		</header>
