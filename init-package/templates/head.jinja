<!DOCTYPE html>
<html data-page="{{ page }}">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />

		<title>{{ title }}</title>
		<link href="//fonts.googleapis.com/icon?family=Material+Icons|Open+Sans:300,400,400i,600,600i,700,700i,800&display=swap" rel="stylesheet" />
		<base href="/" />

		<meta property="og:type" content="website" />
		<meta property="og:title" content="{{ title }}" />
		{% if meta.description %}<meta property="og:description" content="{{ meta.description }}" />{% endif %}
		{% if meta.image %}<meta property="og:image" content="{{ meta.image | asset_url(200) }}" />{% endif %}

		<link rel="stylesheet" href="{{ '/css/style.css' | file_version }}" media="all" />
		<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
		<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/markdown-it/10.0.0/markdown-it.min.js"></script>
		<script async type="text/javascript" src="//www.googletagmanager.com/gtag/js?id=UA-156065557-1"></script>
		<script type="text/javascript" src="{{ '/js/main.js' | file_version }}"></script>
		<script type="text/javascript">
		controller.isLogged = {{ 'true' | if(userAccount, 'false') }};
		</script>
	</head>
